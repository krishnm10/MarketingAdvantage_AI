{
  "client_id": "enterprise_client_A",
  "client_name": "Acme Corp India",
  "vectordb": {
    "type": "qdrant",
    "collection": "acme_marketing_docs",
    "qdrant": {
      "url": "https://acme-xyz.qdrant.tech",
      "api_key_env": "QDRANT_API_KEY_ACME"
    }
  },
  "embedder": {
    "type": "huggingface",
    "document_prefix": "",
    "query_prefix": "Represent this sentence for searching relevant passages: ",
    "huggingface": {
      "model": "BAAI/bge-base-en-v1.5",
      "device": "cpu",
      "batch_size": 32,
      "normalize": true
    }
  },
  "llm": {
    "single": {
      "type": "ollama",
      "model": "llama3.2",
      "temperature": 0.3,
      "max_tokens": 1024
    }
  },
  "reranker": {
    "type": "flashrank",
    "model_name": "ms-marco-MiniLM-L-12-v2",
    "top_k": 5
  },
  "retrieval": {
    "top_k_retrieval": 20,
    "top_k_final": 5,
    "enable_trust_scoring": true
  }
}
